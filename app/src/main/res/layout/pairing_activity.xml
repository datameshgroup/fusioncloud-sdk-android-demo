<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/colorGrey"
    android:gravity="center"
    android:padding="32dp"
    tools:context=".TransactionProgressActivity">

    <TableLayout
        android:id="@+id/tblTerminalPairing"
        android:background="@drawable/shapes"
        android:layout_width="560dp"
        android:layout_height="560dp"
        android:layout_gravity="center"
        android:padding="50dip"
        android:gravity="center">

        <TableRow
            android:id="@+id/tr_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/lblTerminalPairing"
                android:layout_weight="1"
                android:text="Terminal Pairing"
                android:gravity="center|center_horizontal|center_vertical"
                android:textSize="32sp"
                android:paddingHorizontal="100dip"/>

        </TableRow>

        <TableRow
            android:paddingTop="20dp">
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/ivQrCode"
                    tools:srcCompat="@tools:sample/avatars"
                    android:layout_gravity="center_horizontal"/>
            </FrameLayout>

            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblPairingSteps"
                    android:text="@string/pairing_steps"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"/>
            </FrameLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btnEnterManually"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Enter Credentials Manually" />
            </FrameLayout>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
            </FrameLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">
            <TextView
                android:id="@+id/txtPairingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="right"
                android:text="Socket Connected. Logging in..."

                />
            <ProgressBar
                android:id="@+id/progressCircle"
                style="?android:attr/progressBarStyle"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="gone"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <FrameLayout android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>

            <FrameLayout android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dip"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dip"
                android:text="Next"/>
        </TableRow>

    </TableLayout>

</FrameLayout>